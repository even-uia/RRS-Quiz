<?xml version="1.0" encoding="UTF-8"?>
<boatdefs xmlns="boatdef"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="boatdef file:/C:/Prosjekter/RRS-Quiz.git/trunk/xml/boatdef.xsd">


  <boattype id="skiff">
    <hullref id="skiffhull" />
    <rigref id="skiffrig" />
    <perfref id="skiffperf"/>
  </boattype>

  <hull id="skiffhull" beam="3" length="5">
    <start x="0" y="-2.5"/>
    <line x="0.6" y="0"/>
    <line x="1.5" y="0" />
    <line x="1.5" y="2.4"/>
    <line x="-1.5" y="2.4"/>
    <line x="-1.5" y="0" />
    <line x="-0.6" y="0"/>
    <line x="0" y="-2.5"/>
  </hull>

  <hull id="testhull" beam="2" length="6">
    <start x="0" y="3"/>
    <spline2 cx1="1" cy1="1" x="1" y="0" />
    <line x="2" y="0"/>
    <line x="2" y="-2" />
  </hull>

  <rig id="skiffrig" mastpos="0" forestaypos="-2.5">
    <spinpole length="2"/>
    <sail type="main" chord="3" camber="0.06" minangle="5" maxangle="60" />
    <sail type="jib" chord="2" camber="0.06" minangle="10" maxangle="60" />
    <sail type="gennaker" chord="3" camber="0.15" minangle="20" maxangle="60" mintwa="140"/>
  </rig>

  <performance id="skiffperf" >
    <polar >
      <data twa="0" speed="0"/>
      <data twa="25" speed="5"/>
      <data twa="40" speed="10"/>
      <data twa="50" speed="11"/>
      <data twa="90" speed="12"/>
      <data twa="120" speed="12"/>
      <data twa="140" speed="17"/>
      <data twa="150" speed="17"/>
      <data twa="160" speed="15"/>
      <data twa="170" speed="8"/>
      <data twa="180" speed="5"/>
    </polar>
  </performance>

</boatdefs>