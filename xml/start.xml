      <hull type="SKIFF" colour="ff5555" length="40" beam="10"/>
      <navdata x="750" y="200" heading="-155" speed="5" />
      <actions>
        <trim frame="1" auto="true"/>
        <turn frame="25" to="-90" />
      </actions>
